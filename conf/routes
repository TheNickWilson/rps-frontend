# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
POST    /                           controllers.HomeController.submit

GET     /move                       controllers.HomeController.getOpponentMove
POST    /move                       controllers.HomeController.lastOpponentMove
GET     /dynamicMove/:dynaCount     controllers.HomeController.dynamicMove(dynaCount : Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Javascript routing
GET /javascriptRoutes    controllers.HomeController.javascriptRoutes
